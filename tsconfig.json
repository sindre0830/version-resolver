{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.cache/.tsbuildinfo",

    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./.cache",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "sourceMap": true,
    "removeComments": true,

    "isolatedModules": true,

    "allowJs": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./tests", "./.cache", "./dist", "./node_modules", "./config"]
}
